# İsmail Doğan Elektrik - Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development
DEBUG=true
API_VERSION=1.0.0
SECRET_KEY=your-super-secret-key-change-in-production

# ============================================
# DATABASE
# ============================================
DB_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql+asyncpg://elektrik:your-secure-database-password@localhost:5432/elektrik_db

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# EMAIL (SendGrid)
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=info@ismaildoganelektrik.com

# ============================================
# SMS (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# RUST ENGINE
# ============================================
RUST_ENGINE_ENABLED=true
RUST_LIB_PATH=./elektrik_engine.so

# ============================================
# PRICING
# ============================================
ELECTRICITY_PRICE_PER_KWH=3.5
BASE_LABOR_RATE=200.0
URGENT_MULTIPLIER=1.5
EMERGENCY_MULTIPLIER=2.0
